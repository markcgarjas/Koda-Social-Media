<h1>Admins</h1>
<% @admins.each do |admin| %>
  <div class="card">
    <div class="card-body">
      <%= admin.user.email %><br>
      <%= link_to "Edit", edit_group_user_group_path(@group, admin), class: 'btn btn-dark btn-sm' if UserGroupPolicy.new(current_user, @group).edit? %>
      <%= button_to "Delete User", group_path(@group, admin),
                    { onclick: "return confirm('Are you sure you want to delete?')", method: :delete, class: "btn-sm btn bi bi-trash3-fill dropdown-item" } if UserGroupPolicy.new(current_user, @group).destroy? %>
    </div>
  </div>
<% end %>
