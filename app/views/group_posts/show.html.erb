<section class="mt-5 mt-sm-5 mt-md-5 mt-lg-5 mt-xl-5 mt-xxl-5 mb-5">
  <div class="container">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">
        <div class="card-header border bg-warning p-2">
          <%= link_to "", group_path(@group), class: 'float-end btn btn-sm border border-1 bi bi-x-circle' %>
          <h5><%= @group_post.user_group.user.email %></h5>
        </div>
        <div class="card shadow-lg rounded-3">
          <div class="card-body bg-light">
            <div class="">
              <h4 class="mb-3"><%= @group_post.content %></h4>
              <% if @group_post.image? %>
                <%= image_tag @group_post.image.url, class: 'w-100', height: "400" %><br>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



