<%= form_with model: @post, url: path do |f| %>
  <div class="text-center" style="width: 40%;">
    <%= f.label :audience, class: 'bi bi-people' %>
    <%= f.select :audience, options_for_select(Post.audiences.map { |key, value| [key.humanize, key] }), {}, class: 'text-center form-control form-control-sm mt-1 mb-1' %>
  </div>
  <div>
    <%= f.text_area :text, class: 'form-control mt-1 mb-1', style: 'font-size: 25px;', placeholder: "Whats on your mind, #{current_user.email}" %>
  </div>
  <div class="row">
    <div class="col-7">
      <h3>Add to your post!</h3>
    </div>
    <div class="image-upload col-3">
      <label for="file-input">
        <h3 class="bi bi-image"></h3>
      </label>
      <%= f.file_field :image, id: 'file-input' %>
    </div>
  </div>
  <hr>
  <div>
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>